#!/bin/sh

export PATH=/usr/bin:/bin:/usr/sbin:/sbin

PATH=/usr/local/share/npm/bin:$PATH # npm
PATH=/usr/local/bin:$PATH # Homebrew

# Ruby
export GEM_HOME=$HOME/.gem
export GEM_PATH=$GEM_HOME
PATH=$GEM_HOME/bin:$PATH

# Golang
export GOPATH=$HOME/code/go
export GOBIN=$GOPATH/bin
PATH=$GOPATH/bin:$PATH

# Open files, git commits, etc. with Vim
editor=vim
export EDITOR=$editor
export VISUAL=$editor

# FZF - seems like Vim integration is a bit broken.
# It doesn't respect .gitignore unless this is specifically set.
# TODO: try to move this out / make it better.
export FZF_DEFAULT_COMMAND='ag -g ""'

# Move GH private stuff out of .config
export GH_CONFIG=~/.gh

# Usually, Homebrew installs in ~/Applications
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# WAT gpg
export GPG_TTY=$(tty)
