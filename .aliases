# Gem development
alias pod-dev='COCOA_PODS_ENV=development COCOA_PODS_DEPENDENCIES=local ~/code/OSS/CocoaPods/CocoaPods/bin/pod'
alias use-development-pods="export COCOA_PODS_DEPENDENCIES=local"
alias use-real-pods="export COCOA_PODS_DEPENDENCIES=real"

# Search through my code directories and quickly open project folder
# wo = workon
wo() {
  code_dir=~/code
  cd $(find $code_dir -type d -maxdepth 3 | grep -i $* | grep -v /Pods --max-count=1)
}

# resume Vim on ctrl+z
foreground_vi() {                                                                                                                      
  fg %vi
}
zle -N foreground_vi
bindkey '^Z' foreground_vi
