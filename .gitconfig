[alias]
    a = add --all
    b = branch
    bd = branch -d
    ba = branch -a
    c = commit
    co = checkout
    conflicts = !git ls-files -u | cut -f 2 | sort -u
    cam = commit --amend
    l = log --graph --pretty='%C(yellow)%h (%cr) %Cblue %an%C(magenta)%d%Creset %s'
    mf = merge --no-ff
    rh = reset --hard
    ri = rebase -i
    s = status -sb
    ss = stash save
    sp = stash pop
    us = submodule update --recursive
    yolo = push -f origin master
    yoloed = !git fetch origin && git reset --hard origin/master
[user]
	name = Marin Usalj
	email = mneorr@gmail.com
[github]
    user = mneorr
[core]
    excludesfile = /Users/mneorr/.gitignore_global
    quotepath = false
[color]
    branch = auto
    diff = auto
    status = auto
[push]
    default = simple
[mergetool]
    keepBackup = false
    prompt = false
